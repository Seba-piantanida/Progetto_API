{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: cpp compila il file attivo",
            "command": "/usr/bin/cpp",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-Wall",
                "-Werror",
                "-std=gnu11",
                "-lm",
                "-02"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Attivit√† generata dal debugger."
        }
    ],
    "version": "2.0.0"
}